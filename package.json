{
  "name": "smart-hr-onboarding-assistant",
  "version": "1.0.0",
  "description": "AI-powered HR onboarding assistant using IBM watsonx Orchestrate",
  "main": "src/api/server.js",
  "scripts": {
    "start": "node src/api/server.js",
    "dev": "nodemon src/api/server.js",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "client": "cd src/ui && npm start",
    "server": "nodemon src/api/server.js",
    "dev:all": "concurrently \"npm run server\" \"npm run client\""
  },
  "keywords": [
    "ai",
    "watsonx",
    "orchestrate",
    "hr",
    "onboarding",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.0",
    "pg": "^8.11.3",
    "@slack/web-api": "^6.10.0",
    "@slack/bolt": "^3.15.0",
    "nodemailer": "^6.9.7",
    "googleapis": "^128.0.0",
    "winston": "^3.11.0",
    "joi": "^17.11.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "concurrently": "^8.2.2",
    "supertest": "^6.3.3"
  }
}
